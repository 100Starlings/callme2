!!!
%html
  %head
    %title Call Me Dashboard

    %meta{:name=>"viewport", :content=>"width=device-width, initial-scale=1.0"}
    = csrf_meta_tags
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    :css
      body {
        padding-top: 20px;
        padding-bottom: 40px;
      }

      /* Custom container */
      .container-narrow {
        margin: 0 auto;
        max-width: 700px;
      }
      .container-narrow > hr {
        margin: 30px 0;
      }
  %body
    .container-narrow
      .masthead
        %h3.muted Call Me 2

      %hr/

      .row-fluid
        .span-12
          = yield
    = javascript_include_tag "application", "data-turbolinks-track" => true
